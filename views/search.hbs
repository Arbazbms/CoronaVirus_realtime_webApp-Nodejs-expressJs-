    <form action="/search" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Search By Country</label>
            <input type="text" class="form-control" id="sbc" name="sbc" aria-describedby="emailHelp"
                placeholder="Enter Country Name" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

    <h1>Country Wise Data</h1>







    <p style="color: red;">{{err}}</p>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">country_name</th>
                <th>{{country}}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="col">total_cases</th>
                <td>{{tc}}</td>

            </tr>
            <tr>
                <th scope="col">new_cases</th>

                <td>{{nc}}</td>

            </tr>
            <tr>
                <th scope="col">active_cases</th>
                <td>{{ac}}</td>

            </tr>
            <tr>
                <th scope="col">total_deaths</th>
                <td>{{td}}</td>

            </tr>
            <tr>
                <th scope="col">new_deaths</th>
                <td>{{nd}}</td>

            </tr>
            <tr>
                <th scope="col">total-recovered</th>
                <td>{{trc}}</td>

            </tr>
            <tr>
                <th scope="col">serious_critical</th>
                <td>{{sc}}</td>

            </tr>
            <tr>
                <th scope="col">total_cases_per1m:</th>
                <td>{{tcpm}}</td>

            </tr>
            <tr>
                <th scope="col">record_date:</th>
                <td>{{rd}}</td>

            </tr>

        </tbody>
    </table>













    <h1>{{data}}</h1>
